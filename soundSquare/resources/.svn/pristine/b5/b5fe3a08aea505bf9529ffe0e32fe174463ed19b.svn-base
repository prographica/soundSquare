body{
    background-color: #333;
    color: #FFF;
    margin: 0;
    padding: 0;
    font-size: small;
}

*{
    margin: 0;
    padding: 0;
}

p{
    padding: 15px 0;
}

canvas{
    position: absolute;
}

.modal-bg { 
    position: fixed; 
    height: 100%;
    width: 100%;
    background: #000;
    opacity: .6;
    z-index: 100;
    display: none;
    top: 0;
    left: 0; 
}

.modal-win{
    position: fixed; 
    background-color: #000;
    width: 100%;
    height: 400px;
    z-index: 1000;
    top: 0;
    left: 0; 
}

.logo{
    background-image: url(../images/logo.png);
    background-repeat: no-repeat;

    background-size: contain;

    width: 320px;
    height: 80px;
}

.facebook.button{
    background-color: transparent;
    background-image: url(../images/facebook_button.png);
    background-repeat: no-repeat;

    background-size: contain;

    width: 243px;
    height: 55px;

    margin: 0 auto;

    cursor: pointer;
}
.facebook.button:hover {
    background-color: transparent;
}

/**
 * ステータスバー 
 */
.statusbar{
    box-sizing: border-box;
    background-color: #000;
    color: #FFF;
    padding: 6px;
}

.statusbar p{
    padding: 0;
    margin: 0;
    margin-left: 30px;
    font-size: small;
    white-space: nowrap;
}

.statusbar .activity{
    height: 20px;
    width: 20px;
    float: left;
}

.statusbar .image{
    height: 100%;
    float: left;
}

.statusbar .image img{
    height: 100%;
}

/**
 * タイトルバー周りのスタイル 
 */
.titlebar{
    box-sizing: border-box;
    
    z-index: 100;
    position: fixed;
    top: 0;
    left: 0;

    padding: 5px;
    background-color: #000;
}

.titlebar .logo{
    position: relative;
    top: 0;
    left: 0;
    width: 100%;
    height: 80px;
}

.titlebar .statusbar{
    position: relative;
    /*top: 80px;*/
    left: 0;
}

.button{
    box-sizing: border-box;
    background-color: #F00;
    color: #FFF;
    font-weight: 900;
    font-size: medium;

    background-image: url(../images/arrow_right.png);
    background-size: 40px;
    background-repeat: no-repeat;
    background-position: -5px -2px;

    padding: 6px;
    padding-left: 30px;
    padding-right: 5px;

    cursor: pointer;
}
.button:hover {
    background-color: #D90000;
}
.button.black{
    background-color: #222;
}
.button.black:hover {
    background-color: #444;
}


.bar{
    margin: 0 auto;
    padding: 0;
    list-style-type: none;
}

.bar .button{
    float: left;
    margin-right: 1px;
}

/**
 * ローダー関係 
 */
.loader{
    z-index: 10000;
    position: fixed;
}

.loader .bg{
    background-color: #000;
    width: 80px;
    height: 80px;
    border-radius: 5px;
}

.loader .spinner{
}

/**
 * プレイヤー制御関連
 */
.player{
    z-index: 10001;
    position: fixed;
    width: 120px;
    height: 120px;
}

.player .bg{
    position: absolute;
    top: 0;
    left: 0;
    background-color: #000;
    width: 120px;
    height: 120px;
    border-radius: 5px;
    opacity: 0.8;
}

.player .pause{
    background-repeat: no-repeat;
    position: absolute;
    background-image: url(../images/pause.png);
    width: 100%;
    height: 100%;
    background-size: 80px;
    background-position: 20px;
}

.player .play{
    background-repeat: no-repeat;
    position: absolute;
    background-image: url(../images/play.png);
    width: 100%;
    height: 100%;
    background-size: 80px;
    background-position: 20px;
}

/**
 * 設定画面 
 */
.setting{
    position: fixed;
    color: #FFF;
    z-index: 1000;
}

.setting .body{
    box-sizing: border-box;
    position: absolute;
    top: 0;
    left: 0;
    padding: 20px;
    width: 100%;
}

.setting .bg{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #000;
}

.list{
    list-style-type: none;
}

.list li{
    font-size: large;
    font-weight: bold;
    margin-bottom: .3em;
}

/**
 * プロフィール 
 */
.setting .profile{
    width: 100%;
}

.setting .profile .left{
    float: left;
    padding: 5px;
}

.setting .profile .main{
    padding: 5px;
}

.profile:after {  
    content: ".";   
    display: block;   
    height: 0;   
    clear: both;   
    visibility: hidden;  
}
