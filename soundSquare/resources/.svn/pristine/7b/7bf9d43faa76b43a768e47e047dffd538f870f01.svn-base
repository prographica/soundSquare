body{
    background-color: #333;
    color: #FFF;
    margin: 0;
    padding: 0;
    font-size: small;
}

.modal-bg { 
    position: fixed; 
    height: 100%;
    width: 100%;
    background: #000;
    background: rgba(0,0,0,.6);
    z-index: 100;
    display: none;
    top: 0;
    left: 0; 
}

.modal-win{
    position: fixed; 
    background-color: #000;
    width: 100%;
    height: 400px;
    z-index: 1000;
    top: 0;
    left: 0; 
}

.logo{
    background-image: url(../images/logo.png);
    background-repeat: no-repeat;

    background-size: contain;

    width: 320px;
    height: 80px;
}

.facebook.button{
    background-color: transparent;
    background-image: url(../images/facebook_button.png);
    background-repeat: no-repeat;

    background-size: contain;

    width: 243px;
    height: 55px;

    margin: 0 auto;

    cursor: pointer;
}

/**
 * ステータスバー 
 */
.statusbar{
    box-sizing: border-box;
    background-color: #000;
    color: #FFF;
    padding: 6px;
}

.statusbar p{
    padding: 0;
    margin: 0;
    margin-left: 30px;
    font-size: small;
    white-space: nowrap;
}

.statusbar .activity{
    height: 20px;
    width: 20px;
    float: left;
}

.statusbar .image{
    height: 100%;
    float: left;
}

.statusbar .image img{
    height: 100%;
}

/**
 * タイトルバー周りのスタイル 
 */
.titlebar{
    box-sizing: border-box;
    
    z-index: 100;
    position: fixed;
    top: 0;
    left: 0;

    padding: 5px;
    background-color: #000;
}

.titlebar .logo{
    position: relative;
    top: 0;
    left: 0;
    width: 100%;
    height: 80px;
}

.titlebar .statusbar{
    position: relative;
    /*top: 80px;*/
    left: 0;
}

.button{
    background-color: #F00;
    color: #FFF;
    font-weight: 900;
    font-size: large;

    background-image: url(../images/arrow_right.png);
    background-size: 40px;
    background-repeat: no-repeat;

    padding: 5px;
    padding-left: 40px;
    padding-right: 10px;

    cursor: pointer;
}

.titlebar .bar{
    margin: 0;
    padding: 0;
    list-style-type: none;
}

.titlebar .bar .button{
    float: left;
    margin-right: 1px;
}

/**
 * ローダー関係 
 */
.loader{
    z-index: 10000;
    position: fixed;
}

.loader .bg{
    background-color: #000;
    width: 80px;
    height: 80px;
    border-radius: 5px;
}

.loader .spinner{

}
